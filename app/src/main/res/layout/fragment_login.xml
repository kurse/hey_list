<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#E0E0E0"
    android:weightSum="1">



    <com.dd.ShadowLayout
        android:paddingTop="16dp"
        android:id="@+id/box"
        android:layout_width="@dimen/shadow_layout_width"
        android:layout_centerInParent="true"
        android:background="#FFF"
        android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:weightSum="1">
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:inputType="textPersonName"
                android:hint="Hey!List"
                android:gravity="center"
                android:textColorHint="#91A516"
                android:textSize="50sp"
                android:ems="10"
                tools:layout_editor_absoluteX="62dp"
                tools:layout_editor_absoluteY="31dp"
                android:paddingLeft="@dimen/text_margin"
                android:paddingRight="@dimen/text_margin"
                android:textColor="#FFFF"
                android:id="@+id/textView" />
    <EditText
        android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:inputType="textPersonName"
            android:hint="@string/username"
            android:drawableLeft="@drawable/icon_username"
        android:background="@drawable/text_rectangle"

        android:textColorHint="#96B7CA6C"
            android:ems="10"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="31dp"
            android:drawablePadding="10dip"
            android:layout_marginBottom="@dimen/text_margin"
            android:paddingLeft="@dimen/text_margin"
            android:paddingRight="@dimen/text_margin"
            android:paddingTop="4dip"
            android:paddingBottom="4dip"
            android:textColor="#B7CA6C"
            android:id="@+id/username" />

    <EditText
        android:textColor="#B7CA6C"
        android:textColorHint="#96B7CA6C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/icon_password"
        android:drawablePadding="10dip"
        android:hint="@string/password"


        android:paddingLeft="@dimen/text_margin"
        android:paddingRight="@dimen/text_margin"
        android:paddingTop="4dip"
        android:paddingBottom="4dip"            android:layout_marginBottom="@dimen/text_margin"

        android:ems="10"
        android:background="@drawable/text_rectangle"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="86dp"
        android:id="@+id/password" />

    <Button
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:text="@string/connect"
            android:background="#91A516"
            android:layout_width="220dp"
            android:textColor="#FFF"
            android:elevation="10dp"
            android:layout_marginBottom="8dp"

        android:layout_height="40dp"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="152dp"
            android:id="@+id/login"
             />

    <Button
        android:background="#91A516"
        android:layout_width="220dp"
        android:textColor="#FFF"
        android:elevation="10dp"
        android:layout_height="40dp"
            android:text="@string/register"
        android:layout_marginBottom="8dp"

            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="152dp"
            android:id="@+id/register" />

    <Button
        android:background="#91A516"
        android:layout_width="220dp"
        android:textColor="#FFF"
        android:elevation="10dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:text="@string/added_user"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="152dp"
        android:id="@+id/added_users" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_fb"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"/>
        </LinearLayout>
    </com.dd.ShadowLayout>
    <TextView
        android:textColor="#6C6C6C"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_centerInParent="true"
        android:text="Hey!Labs 2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>